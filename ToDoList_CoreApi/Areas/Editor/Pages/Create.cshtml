@page
@model ToDoList_CoreApi.Areas.Editor.Pages.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>TaskModel</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="TaskModel.Title" class="control-label"></label>
                <input asp-for="TaskModel.Title" class="form-control" />
                <span asp-validation-for="TaskModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="TaskModel.Description" class="control-label"></label>
                <input asp-for="TaskModel.Description" class="form-control" />
                <span asp-validation-for="TaskModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="TaskModel.DueDate" class="control-label"></label>
                <input asp-for="TaskModel.DueDate" class="form-control" />
                <span asp-validation-for="TaskModel.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TaskModel.IsCompleted" /> @Html.DisplayNameFor(model => model.TaskModel.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
